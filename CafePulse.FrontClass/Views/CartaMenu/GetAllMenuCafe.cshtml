@model CafePulse.ModelClass.Menu;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Generico Tablas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/css/StyleTable.css" rel="stylesheet" />
    <link href="~/css/StyleButtonBack.css" rel="stylesheet" />

</head>

<body>
    <section>
        <h1>Carta del Menu del Dia</h1>
        <br>
        @if (ViewBag.Rol != 3)
        {
            <h2>Seleccione + para agregar un Registro Nuevo</h2> <button type="button" class="btn btn-outline-light" style="margin-left: 20px">+</button>
        }
        <br>
        <div class="form-box">
            <div class="form-value">
                <form action="">
                    <div class="container" id="genericatable">
                        <table class="fl-table">
                            <thead>
                                <tr>
                                    <td style="visibility:collapse; display:none;">
                                        IdMenu</th>
                                        @if (ViewBag.Rol != 3)
                                        {
                                        <th>EDITAR</th>
                                        }
                                    <th>PRODUCTO</th>
                                    <th>PRECIO</th>

                                        @if (ViewBag.Rol != 3)
                                        {
                                        <th>ELIMINAR</th>
                                        }
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (CafePulse.ModelClass.Menu item in Model.MenuList)
                                {
                                    <tr>
                                        <!-- Solo mostrar la celda "EDITAR" si el Rol NO es 3 -->
                                        @if (ViewBag.Rol != 3)
                                        {
                                            <td><button class="btn btn-outline-dark glyphicon glyphicon-edit" href="@Url.Action("Form", "HologramaEMA"/* , new { IdHologramaEma = hol.IdHologramaEma } */)"><i class="bi bi-pencil-square"></i></button></td>
                                        }
                                    </tr>
                                <td>@item.NombreProducto</td>
                                <td>@item.Precio</td>
                                <tr>
                                    <!-- Solo mostrar la celda "EDITAR" si el Rol NO es 3 -->
                                        @if (ViewBag.Rol != 3)
                                        {
                                        <td><button class="btn btn-outline-dark glyphicon glyphicon-trash" href="@Url.Action("Delete", "HologramaEMA"/* , new { IdHologramaEma = hol.IdHologramaEma} */)" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-trash3-fill"></i></button></td>
                                        }
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>

        <!-- Contenedor del botón -->
        <div class="button-container">
            <a href="@Url.Action("IntoMenu", "Menu", new { Rol = ViewBag.Rol })">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                VOLVER
            </a>
        </div>


    </section>

</body>

</html>