@model CafePulse.ModelClass.Usuario;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/stylesheetloggin.css" rel="stylesheet" />
    
    <title>WELCOME TO THE COFFEE SHOP SYSTEM</title>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form asp-action="GetInto" asp-controller="Loggin">
                    <h2>Inicio</h2>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input type="text" name="Usuario" required="">
                        <label for="">Usuario</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" name="Contraseña" required>
                        <label for="">Contraseña</label>
                    </div>
                    <div class="forget">
                        <label for=""><a href="#">Recuperar Contraseña</a></label>

                    </div>
                    <button>Ingresar</button>
                    <div class="register">
                        <p>No tienes una cuenta <a href="#">Registrate Aqui</a></p>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>

